@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="/image/bot-phill.png" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form action="/token" enctype="application/x-www-form-urlencoded" method="POST">
            <input type="text" id="username" class="fadeIn second" name="username" placeholder="username">
            <input type="text" id="password" class="fadeIn third" name="password" placeholder="password">
            <input type="hidden" class="fadeIn third" id="grant_type" name="grant_type" value="password">

            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>